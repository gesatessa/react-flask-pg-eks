# frontend/Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy app source
COPY . .

# Accept build-time API URL
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# Build the production frontend
RUN npm run build

# Expose port and serve build
EXPOSE 5173
CMD ["npm", "run", "dev", "--", "--host"]
